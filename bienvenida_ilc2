    <script>
        let currentSlide = 1;
        const totalSlides = 7;

        function showSlide(slideNumber) {
            document.querySelectorAll('.slide').forEach(slide => {
                slide.classList.remove('active');
            });
            const newSlide = document.getElementById(`slide-${slideNumber}`);
            if (newSlide) {
                newSlide.classList.add('active');
            }
        }

        function updateProgressBar() {
            const progress = ((currentSlide - 1) / (totalSlides - 1)) * 100;
            document.getElementById('progressBar').style.width = `${progress}%`;
        }
        
        function updateNavButtons() {
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');

            if (currentSlide === 1) {
                prevBtn.disabled = true;
                prevBtn.classList.add('opacity-0');
                nextBtn.innerHTML = 'Siguiente';
            } else {
                prevBtn.disabled = false;
                prevBtn.classList.remove('opacity-0');
            }

            if (currentSlide === totalSlides) {
                nextBtn.innerHTML = 'Finalizar';
            } else if (currentSlide > 1 && currentSlide < totalSlides) {
                nextBtn.innerHTML = 'Siguiente';
            }
            
            if (currentSlide > totalSlides) {
                // Optional: Restart presentation or hide buttons
                currentSlide = 1;
                showSlide(currentSlide);
                updateProgressBar();
                updateNavButtons();
            }
        }

        function changeSlide(slideNumber) {
            currentSlide = slideNumber;
            showSlide(currentSlide);
            updateProgressBar();
            updateNavButtons();
        }
        
        function nextSlide() {
            if (currentSlide < totalSlides) {
                currentSlide++;
                showSlide(currentSlide);
                updateProgressBar();
                updateNavButtons();
            } else {
                // Handle finish action, e.g., restart
                currentSlide = 1;
                showSlide(currentSlide);
                updateProgressBar();
                updateNavButtons();
            }
        }
        
        function prevSlide() {
            if (currentSlide > 1) {
                currentSlide--;
                showSlide(currentSlide);
                updateProgressBar();
                updateNavButtons();
            }
        }

        // Initial setup
        document.addEventListener('DOMContentLoaded', () => {
            showSlide(currentSlide);
            updateProgressBar();
            updateNavButtons();
        });
    </script>

</body>
