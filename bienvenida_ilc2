                <button id="prevBtn" onclick="prevSlide()" class="bg-gray-300 text-gray-700 font-bold py-2 px-6 rounded-full hover:bg-gray-400 transition-opacity opacity-0" disabled>
                    Anterior
                </button>
                <button id="nextBtn" onclick="nextSlide()" class="bg-blue-600 text-white font-bold py-2 px-6 rounded-full hover:bg-blue-700 transition">
                    Siguiente
                </button>
